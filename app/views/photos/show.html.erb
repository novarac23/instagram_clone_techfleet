<h1> Your Photo </h1>
<h1> <%= @photo.title %> </h1>

<%= image_tag @photo.image.url(:medium) %>

<hr>

<%= link_to photo_like_path(@photo.id), method: :put do %>
  Like
<% end %>
|
<%= link_to photo_dislike_path(@photo.id), method: :put do %>
  Dislike
<% end %>

<p> Likes: <%= @photo.get_likes.size %> </p>
<p> Dislikes: <%= @photo.get_dislikes.size %> </p>

<hr>

<h1>Comments</h1>

<%= @comments.each do |comment| %>
  <p> From <%= comment.user.first_name %> </p>
  <p> <%= comment.body %> </p>
<% end %>

<hr>

<hr>

<%= form_for @comment, url: comments_path do |f| %>
  <%= f.hidden_field :photo_id, value: @photo.id %>
  <%= f.text_area :body %>
  <br>
  <%= f.submit %>
<% end %>
