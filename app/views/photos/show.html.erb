<h1> Your Photo </h1>

<%= image_tag @photo.image.url(:medium) %>

<h1>Comments</h1>

<%= @comments.each do |comment| %>
  <p> From <%= comment.user.first_name %> </p>
  <p> <%= comment.body %> </p>
<% end %>

<hr>

<hr>

<%= form_for @comment, url: comments_path do |f| %>
  <%= f.hidden_field :photo_id, value: @photo.id %>
  <%= f.text_area :body %>
  <br>
  <%= f.submit %>
<% end %>
